{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "DOCKERFILE"
    },
    "deploy": {
        "startCommand": "python manage.py migrate && gunicorn main_project.wsgi:application --bind 0.0.0.0:$PORT --workers 2 --timeout 120",
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 10
    }
}